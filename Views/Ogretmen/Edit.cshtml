@model Ogretmen

<h2>Öğretmen Güncelle</h2>
<hr>

<div class="row">
    <div class="col-8">
        <form asp-controller="Ogretmen" asp-action="Edit" method="POST">
            <input type="hidden" asp-for="OgretmenId">
            <div class="mb-3">
                <label asp-for="Ad" class="form-label">Öğretmen Adı</label>
                <input asp-for="Ad" type="text" class="form-control">
            </div>

            <div class="mb-3">
                <label asp-for="Soyad" class="form-label">Öğretmen Soyadı</label>
                <input asp-for="Soyad" type="text" class="form-control">
            </div>


            <div class="mb-3">
                <label asp-for="Eposta" class="form-label">Eposta</label>
                <input asp-for="Eposta" type="email" class="form-control">
            </div>


            <div class="mb-3">
                <label asp-for="Telefon" class="form-label">Telefon</label>
                <input asp-for="Telefon" type="text" class="form-control">
            </div>

            <div class="mb-3">
                <label asp-for="BaslamaTarihi" class="form-label">Baslama Tarihi</label>
                <input asp-for="BaslamaTarihi" class="form-control">
            </div>



            <button type="submit" class="btn btn-secondary">Kaydet</button>


        </form>
    </div>
    <div class="col-4">



    </div>
</div>
