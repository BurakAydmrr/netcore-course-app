@model Kurs
@{
    ViewBag.Title = "Delete";
}

<p>
    <b> @Model.Baslik </b> adlı kursu silmek istediğinize emin misiniz?

<form asp-controller="Kurs" asp-action="Delete" method="POST">
    <input type="hidden" name="id" value="@Model.KursId" />
    <button type="submit" class="btn btn-danger">Evet</button>
    <a asp-controller="Kurs" asp-action="Index" class="btn btn-primary">Hayır</a>
</form>
</p>